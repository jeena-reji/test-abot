name: IOSMCN-IMS Release Workflow

on:
  workflow_dispatch:
    inputs:
      release_version:
        description: 'Release version (0.2.1)'
        required: true
        type: string

jobs:
  docker-build-push-images:
    runs-on: ubuntu-latest

    env:
      REGISTRY: ghcr.io
      DOCKER_REPOSITORY: ${{ github.repository }}
      RELEASE_VERSION: ${{ github.event.inputs.release_version }}

    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Set Up Docker Buildx
        uses: docker/setup-buildx-action@v3

      - name: Get Short Commit SHA
        run: echo "GIT_SHA_SHORT=$(git rev-parse --short HEAD)" >> $GITHUB_ENV

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ${{ env.REGISTRY }}
          username: ${{ secrets.GHCRUSER }}
          password: ${{ secrets.GHCRPASS }}

      - name: Check if Docker image tag already exists
        env:
          DOCKER_TAG: release-${{ env.RELEASE_VERSION }}
        run: |
          IMAGE=${{ env.REGISTRY }}/${{ env.DOCKER_REPOSITORY }}:${DOCKER_TAG}
          echo "Checking if image $IMAGE already exists..."
          if docker pull $IMAGE > /dev/null 2>&1; then
            echo "Image tag ${DOCKER_TAG} already exists. Exiting to avoid overwrite."
            exit 1
          else
            echo "Image tag ${DOCKER_TAG} not found. Proceeding with build."
          fi

      - name: Build Docker Image (N5 + CSCF)
        env:
          DOCKER_TAG: release-${{ env.RELEASE_VERSION }}
        run: |
          echo "Building unified image that includes both N5 and CSCF..."
          docker build -t ${{ env.REGISTRY }}/${{ env.DOCKER_REPOSITORY }}:${DOCKER_TAG} -f Dockerfile .

      - name: Push Docker Image to GHCR
        env:
          DOCKER_TAG: release-${{ env.RELEASE_VERSION }}
        run: |
          docker push ${{ env.REGISTRY }}/${{ env.DOCKER_REPOSITORY }}:${DOCKER_TAG}
          echo "Successfully pushed ${{ env.REGISTRY }}/${{ env.DOCKER_REPOSITORY }}:${DOCKER_TAG}"
