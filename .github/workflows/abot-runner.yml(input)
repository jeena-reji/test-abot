name: ABot Feature Tag Execution

on:
  workflow_dispatch:
    inputs:
      feature_tag:
        description: "Enter ABot feature tag(s) (comma-separated)"
        required: true
        default: '@your-feature-tag'

jobs:
  run-abot-tests:
    runs-on: [self-hosted]

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: ðŸ›  Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'

      - name: Install dependencies
        run: pip install requests

      - name: Run ABot Tests
        run: |
          echo "ðŸ”„ Starting ABot Execution for tag: ${{ github.event.inputs.feature_tag }}"
          python abot_runner.py "${{ github.event.inputs.feature_tag }}"
          echo "âœ… ABot Execution Completed."

      - name: ðŸ“„ Upload All Results Folder
        uses: actions/upload-artifact@v4
        with:
          name: abot-results
          path: results/
