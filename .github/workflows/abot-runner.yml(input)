name: ABot Feature Tag Execution

on:
  workflow_dispatch:
    inputs:
      feature_tag:
        description: 'Feature Tag to Execute (e.g., @5gs-attach-basic)'
        required: true
        default: '@your-feature-tag'

jobs:
  run-abot-tests:
    runs-on: [self-hosted]

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: ðŸ›  Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'

      - name: Install dependencies
        run: pip install requests

      - name: Run ABot Tests
        run: |
          echo "ðŸ”„ Starting ABot Execution for tag: ${{ github.event.inputs.feature_tag }}"
          python abot_runner.py "${{ github.event.inputs.feature_tag }}"
          echo "âœ… ABot Execution Completed."

      - name: ðŸ“„ Upload ABot Summary (JSON)
        uses: actions/upload-artifact@v4
        with:
          name: abot-summary
          path: results/*.json

      - name: ðŸ“„ Upload ABot Logs (LOG)
        uses: actions/upload-artifact@v4
        with:
          name: abot-log
          path: abot_log.log

      - name: ðŸ“„ Upload ABot HTML Report
        uses: actions/upload-artifact@v4
        with:
          name: abot-html-report
          path: results/*.html
